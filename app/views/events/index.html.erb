<% content_for :main do %>
  <section>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1 events">
          <div class="row">
            <% @events_by_date.each do |date, events| %>
              <div class="col-sm-12">
                <div class="date">
                  <div class="date-header header">
                    <%= formatted_date(date) %>
                  </div>
                  <div class="date-content">
                      <% events.each do |event| %>
                          <div class="event">
                            <div class="col-sm-12 col-md-6 title">
                              <%= truncated_string(event.headliner) %>
                            </div>
                            <div class="col-sm-12 col-md-5 info">
                              <%= formatted_time(event.time) %> @ <%= link_to event.venue.name, venue_path(event.venue.id), class: 'body-link' %>
                              <div class="price">
                              <%= event.price %>
                              </div>
                            </div>
                            <div class="col-sm-12 col-md-1">
                              <%= link_to (fa_icon 'ticket'), event.tickets, class: 'tickets' %>
                            </div>
                          </div>
                      <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>

<% content_for :script do %>
  <%= javascript_include_tag 'events-index' %>
<% end %>