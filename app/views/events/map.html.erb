<% content_for :main do %>
  <div id="event-date-selector">
    <ul>
      <li><h1 id="today" class="active"><span>Today</span></h1></li>
      <li><h1 id="tomorrow">Tomorrow</h1></li>
      <li><h1 id="cal-date-trigger"><%= Date.today.strftime("%m.%d.%Y") %></h1>
        <div id="cal-date"></div>
      </li>
    </ul>
  </div>
  <div id="events-map-container">
  </div>
<% end %>

<% content_for :script do %>
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp" type="text/javascript"></script>
  <script src="http://google-maps-utility-library-v3.googlecode.com/svn/trunk/infobox/src/infobox.js" type="text/javascript"></script>
  <%= javascript_include_tag 'events-map' %>

<% end %>
