<% content_for :main do %>
  <section>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-4 date-select">
          <h1 id="today" class="active"><span>Today</span></h1>
        </div>
        <div class="col-sm-4 date-select">
          <h1 id="tomorrow">Tomorrow</h1>
        </div>
        <div class="col-sm-4 date-select">
          <%= select_tag 'date-select', options_for_select(next_months(6)), class: 'btn btn-default' %>
          <div id="cal-date"></div>
        </div>
      </div>
    </div>
    <div id="events-map-container">
    </div>
  </section>
<% end %>

<% content_for :script do %>
  <%= javascript_include_tag 'events-map' %>
<% end %>
